<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.livedata.TestNonStickyLiveDataActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bus_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="观察粘性事件Event2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bus_non_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="观察非粘性事件Event1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bus_sticky" />

</androidx.constraintlayout.widget.ConstraintLayout>